{
  "info": {
    "name": "Apex Trading Bot API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "UI Config",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/ui/config",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "ui",
            "config"
          ]
        }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"username\":\"demo\",\"password\":\"demo\"}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/login",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "auth",
            "login"
          ]
        }
      }
    },
    {
      "name": "Manual Scanner Run",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"universe\":\"CUSTOM\",\"symbols\":[\"SBIN\",\"RELIANCE\"],\"tf\":\"5m\",\"regime\":\"AUTO\",\"dryRun\":true}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/scanner/run",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "scanner",
            "run"
          ]
        }
      }
    },
    {
      "name": "Place Order",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"symbol\":\"NSE:SBIN-EQ\",\"qty\":1,\"side\":\"BUY\",\"type\":\"MARKET\"}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/orders",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "orders"
          ]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080"
    },
    {
      "key": "jwt",
      "value": ""
    }
  ]
}
