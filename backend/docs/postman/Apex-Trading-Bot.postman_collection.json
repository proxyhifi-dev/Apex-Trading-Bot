        },
        {
          "name": "Replace Watchlist",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"symbols\": [\n    \"NSE:INFY-EQ\",\n    \"NSE:HDFCBANK-EQ\"\n  ]\n}"
