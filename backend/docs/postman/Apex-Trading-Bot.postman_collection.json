              "script": {
                "type": "text/javascript",
                "exec": [
                  "const json = pm.response.json();",
                  "if (json && json.state) {",
                  "  pm.collectionVariables.set('state', json.state);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "FYERS Callback (POST)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"auth_code\": \"{{authCode}}\",\n  \"state\": \"{{state}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/fyers/callback",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "fyers", "callback"]
            }
          },
          "event": [
            {
              "listen": "test",
